<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    >
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/task_title_label"
        android:text="@string/task_title_label"
        />
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/task_title_input"
        android:text="@string/todo_title_hint"
        />
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/task_detail_label"
        android:text="@string/task_detail_label"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/task_new_data_btn"

        />
    <CheckBox
        android:id="@+id/task_solved_checkbox"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/task_solved_label"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btn_select_reporter"
        android:text="@string/btn_select_reporter"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btn_send_report"
        android:text="@string/btn_send_report"

        />
</LinearLayout>